<div class="card p-2 m-4">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h1><%= service.title %></h1>
          <h4>Averaging $<%= service.average_price %></h4>
          <% if service.description %>
            <%= service.description %>
          <% else %>
            <p>No description</p>
          <% end %>
          <h3>Reviews</h3>
          <% if service.reviews.any? %>
            <% service.reviews.limit(4).each do |review| %>
                <%= render partial: 'service/review', locals: { review: review } %>
            <% end %>
            <button class="btn btn-primary ms-1 mt-3"><%= link_to "See all reviews", service_path(service), :class => "dropdown-item" %></button>
          <% else %>
            <p>No reviews yet.</p>
            <button class="btn btn-primary ms-1 mt-3"><%= link_to "Go to service page", service_path(service), :class => "dropdown-item" %></button>
          <% end %>
        </div>
        <div class="col-md-4">
          <h3>Service Information</h3>
          <ul class="list-group">
            <li class="list-group-item">Minimum Price: $<%= service.minimum_price %> USD</li>
            <li class="list-group-item">Maximum Price: $<%= service.maximum_price %> USD</li>
            <li class="list-group-item">Most Common Service Provider: Mr. Lube</li>
          </ul>
        </div>
      </div>
    </div>
</div>



