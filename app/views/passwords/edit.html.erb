<div class="d-flex aligns-items-center justify-content-center card text-center w-25 position-absolute top-50 start-50 translate-middle p-5">
    <h1>Update Password</h1>
    
    <%= form_with model: current_user, url: password_path do |form| %>
        <% if form.object.errors.any? %>
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        <% end %>
    
    
        <div>
            <%= form.label :password_challenge, "Current Password", :class=>"form-label" %>
            <%= form.password_field :password_challenge, :class=>"form-control" %>
        </div>
    
        <div>
            <%= form.label :password, "New Password", :class=>"form-label" %>
            <%= form.password_field :password, :class=>"form-control" %>
        </div>
    
        <div>
            <%= form.label :password_confirmation, :class=>"form-label" %>
            <%= form.password_field :password_confirmation, :class=>"form-control" %>
        </div>
    
        <div>
        <%= form.submit "Update Password", :class=>"btn btn-primary m-3" %>
        </div>
    <% end %>
</div>
