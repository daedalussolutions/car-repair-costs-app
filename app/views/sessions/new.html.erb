<div class="d-flex aligns-items-center justify-content-center card text-center w-25 position-absolute top-50 start-50 translate-middle p-5">
    <h1>Log In</h1>
    
    <%= form_with model: @user, url: session_path do |form| %>
        <div class="form-group">
            <%= form.label :email, :class=>"form-label" %>
            <%= form.email_field :email, :class=>"form-control" %>
        </div>
    
        <div class="form-group">
            <%= form.label :password, :class=>"form-label" %>
            <%= form.password_field :password, :class=>"form-control" %>
        </div>
    
        <div class="form-group">
            <%= form.submit "Log In", :class=>"btn btn-primary m-3" %>
        </div>
    <% end %>
    
    <%= link_to "Forgot your password?", new_password_reset_path %>
</div>
