<h6>Leave a review</h6>
<%= form_for [ @service, @review ] do |form| %>

    <%= form.hidden_field :user_id, value: current_user.id if current_user %>
    <div class="form-group">
        <%= form.label :title, "Summary: " %>
        <%= form.text_field :title, :class=>"form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :vehicle_make %>
        <%= form.collection_select :vehicle_make_name, VehicleMake.all, :name, :name, {prompt: "Select Vehicle Make"}, {class: "form-select", data: { controller: "vehicle"}} %>
    </div>

    <div class="form-group" id="make_models_list">
        
    </div>

    <div class="form-group">
        <%= form.label :price, "Amount Paid: " %>
        <%= form.number_field :price, :class=>"form-control" %>
    </div>
    

    <div class="form-group">
        <%= form.label :description, "Details (optional): " %>
        <%= form.text_area :description, :class=>"form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :date, "Date of service: "%>
        <%= form.date_select :date, :class=>"form-control" %>
    </div>

    <%= form.submit "Submit Review", :class=>"btn btn-primary" %>

<% end %>
